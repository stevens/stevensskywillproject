<% taggable_type = type_for(item).downcase %>
<%= "#{TAG_CN}: " %>
<% if item.tag_list.size > 0 %>
	<% for tag in item.tag_list %>
		<%= link_to strip_tags(tag), { :controller => 'taggings', :action => 'show', :id => tag, :taggable_type => taggable_type } %>
	<% end %>
<% else %>
	<%= "还没有#{TAG_CN}" %>
<% end %>