<h1>Editing homepage</h1>

<%= error_messages_for :homepage %>

<% form_for(@homepage) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @homepage %> |
<%= link_to 'Back', homepages_path %>
