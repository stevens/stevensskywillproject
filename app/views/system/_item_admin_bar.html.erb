<% item_type = type_for(item) %>

<% if item.roles && item.roles.include?('11') %>
	<% delete_message = "确定要将这#{unit_for(item_type)}#{name_for(item_type)}从精选#{name_for(item_type)}中#{DELETE_CN}吗?" %>
	<%= link_to_remote "#{DELETE_CN}精选", :url => { :controller => controller_name(item_type), :action => 'choice', :id => item.id, :to_choice => false, :ref => ref }, :confirm => delete_message %>
<% else %>
	<% add_message = "确定要把这#{unit_for(item_type)}#{name_for(item_type)}加为精选吗?" %>
	<%= link_to_remote '加为精选', :url => { :controller => controller_name(item_type), :action => 'choice', :id => item.id, :to_choice => true, :ref => ref }, :confirm => add_message %>
<% end %>
