<% codeable_type = "#{params[:controller].singularize}_filter" %>
<% items_set_count = @matches_set_count %>

<% if params[:action] == 'mine' %>
	<% user = @current_user %>
	<% codeable_type += "_my" %>
<% else %>
	<% if @user %>
		<% user = @user %>
		<% codeable_type += "_ta" %>
	<% end %>
<% end %>

<%= render :partial => 'layouts/items_filter_bar', 
					 :locals => { :user => user, 
					 							:codeable_type => codeable_type, 
					 							:items_set_count => items_set_count } %>