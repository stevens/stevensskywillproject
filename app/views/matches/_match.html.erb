<% user = item.user %>

<div id="match_<%= item.id %>_basic">
	<div class="basic">
		<h2>
			<div id="match_<%= item.id %>_title">
				<%= render :partial => '/layouts/item_basic', 
									 :locals => { :item => item,
									 							:show_icon => true,
									 							:show_title => true,
									 							:show_link => true } %>
			</div>
		</h2>
		<ul>
			<li>
				<%= render :partial => '/users/user_basic', 
									 :locals => { :user => user, 
									 							:show_come_from => true, 
									 							:show_icon => true,
									 							:show_name => true, 
									 							:show_link => true, 
									 							:show_username => true,
									 							:show_myname => false } %>
			</li>
			<li>
				<%= "#{time_iso_format(item.created_at, true)} #{CREATE_CN}" %>
			</li>
			<% if item.original_updated_at && item.created_at != item.original_updated_at %>
				<li>
					<%= "#{time_iso_format(item.original_updated_at, true)} #{UPDATE_CN}" %>
				</li>
			<% end %>
			<li>
				<%= "#{code_title('privacy', item.privacy)}可以看到这#{unit_for('Match')}#{MATCH_CN}" %>
			</li>
			<li>
				<%= "#{TAG_CN}: " %>
				<% if item.tag_list.size > 0 %>
	    		<% for tag in item.tag_list %>
		    		<%= link_to h(tag), {:controller => 'taggings', :action => 'show', :id => tag, :taggable_type => 'match'} %>
		    	<% end %>
				<% else %>
		    	<%= "还没有#{TAG_CN}" %>
		    	<% if @current_user && user == @current_user %>
		    		<%= link_to "[#{ADD_CN}#{TAG_CN}]", [item, :edit] %>
		    	<% end %>
				<% end %>
			</li>
		</ul>
	</div>
	
	<div class="main">
		<ul>
			<li><%= "发起者: #{SITE_NAME_CN}" %></li>
			<li><%= "作品类型: #{name_for(item.entriable_type)}" %></li>
			<li><%= "主题: #{strip_tags(item.subject)}" %></li>
			<li><%= "口号: #{strip_tags(item.slogan)}" %></li>
			<li>
				<%= render :partial => '/matches/match_status', 
									 :locals => { :item => item } %>
			</li>
		</ul>
	</div>
</div>

<% if show_todo %>
	<div id="match_<%= item.id %>_todo" class="todo_right">
		<% if show_manage %>

		<% end %>
	</div>
<% end %>

<div id="match_<%= item.id %>_photos" class="photos">
	<% if cover_photo = cover_photo(item) %>
		<div id="photos_filter_bar">
			<%= render :partial => "/photos/photos_filter_bar", 
								 :locals => { :photoable => item, 
								 							:current_filter => @current_filter, 
								 							:filter_type => 'photo_type' } %>
		</div>
		<div id="main_photo" class="cover_photo">
			<%= render :partial => "/photos/photo_photo",
								 :locals => { :photo => cover_photo, 
								 						  :show_cover => false, 
								 						  :focus_photo => nil, 
								 						  :photo_style => 'full', 
								 						  :show_photo_link => false, 
								 						  :photo_link_url => nil, 
								 						  :photo_link_remote => false, 
								 						  :photo_filtered => false, 
								 						  :filter_type => 'photo_type' } %>
		</div>
		<div id="photos_nav" >
			<%= render :partial => "/photos/photos_matrix",
								 :locals => { :show_paginate => false,
								 						  :photos_set => item.photos,
								 						  :limit => nil, 
								 						  :show_photo => true, 
								 						  :focus_photo => nil, 
								 						  :photos_count_per_row => MATRIX_ITEMS_COUNT_PER_ROW_M, 
								 						  :photo_style => 'matrix', 
								 						  :photo_link_remote => true, 
								 						  :show_below_photo => false,
								 						  :show_cover => true, 
								 						  :show_photo_todo => false, 
								 						  :photo_filtered => false, 
								 						  :filter_type => 'photo_type' } %>
		</div>
	<% else %>
		<%= "还没有#{PHOTO_CN}" %>
	<% end %>		
	<div id="photos_todo_bar" class="below_photo">
		<%= render :partial => "/photos/photos_todo_bar", 
							 :locals => { :photoable => item } %>
	</div>
</div>

<div id="match_<%= item.id %>_main" class="item_detail">
	<div class="main">
		<h3><%= "#{DESCRIPTION_CN}:" %></h3>
		<ul><%= paragraphs(item.description, true, true) %></ul>
	</div>
	
	<div class="main">
		<h3><%= "赛程安排:" %></h3>
		<ul>
			<li>
				<span class='text'><%= "启动时间: #{time_iso_format(item.start_at, false, true)}" %></span>
			</li>
			<% match_times = [['报名', 'enrolling_'], ['征集', 'collecting_'], ['投票', 'voting_']] %>
			<% for t in match_times %>
				<% if (start_at = item["#{t[1]}start_at".to_sym]) && (end_at = item["#{t[1]}end_at".to_sym]) %>
					<li>
						<span class='text'><%= "#{t[0]}时间: #{time_iso_format(start_at, false, true)} -- #{time_iso_format(end_at, false, true)}" %></span>
					</li>
				<% end %>
			<% end %>
			<li>
				<span class='text'><%= "揭晓时间: #{time_iso_format(item.end_at, false, true)}" %></span>
			</li>
		</ul>
	</div>
	
	<div class="main">
		<h3><%= "奖项设置:" %></h3>
		<ul>
			<% for award in item.awards %>
				<li style="padding-left: 24px">
					<% quota = (award.quota.blank? ? '名额待定' : "#{award.quota}名") %>
					<span class='subtitle'><%= "#{award.title} (#{quota})" %></span>
					<span class='text'><%= "奖品 - #{award.prize_title}" %></span><br />
				</li>
			<% end %>
		</ul>
	</div>
	
	<div class="main">
		<h3><%= "规则:" %></h3>
		<ul>
			<em class="more">
				<% entry_unit = unit_for('Entry') %>
				<% if item.entries_per_player %>
					<li>
						<span class='text'><%= "每位选手最多可以提交#{item.entries_per_player}#{entry_unit}#{ENTRY_CN}" %></span>
					</li>
				<% end %>
				<!-- <li>
					<span class='text'><%= "每#{entry_unit}#{ENTRY_CN}至少要包括#{item.chars_per_entry}个文字, #{item.photos_per_entry}#{unit_for('Photo')}#{PHOTO_CN}, #{item.tags_per_entry}个#{TAG_CN}" %></span>
				</li> -->
				<% if item.entries_per_voter %>
					<li>
						<span class='text'><%= "每位投票者最多可以给#{item.entries_per_voter}#{entry_unit}#{ENTRY_CN}#{VOTE_CN}" %></span>
					</li>
				<% end %>
				<% if item.votes_per_entry %>
					<li>
						<span class='text'><%= "每位投票者最多可以给每#{entry_unit}#{ENTRY_CN}投#{item.votes_per_entry}票" %></span>
					</li>
				<% end %>
				<% if item.self_vote == '1' %>
					<li>
						<span class='text'><%= "允许选手给自己的#{ENTRY_CN}#{VOTE_CN}" %></span>
					</li>
				<% end %>
				<% if item.awards_per_entry %>
					<li>
						<span class='text'><%= "每#{entry_unit}#{ENTRY_CN}最多可以获得#{item.awards_per_entry}个奖项" %></span>
					</li>
				<% end %>
				<% if item.awards_per_player %>
					<li>
						<span class='text'><%= "每位选手最多可以获得#{item.awards_per_entry}个奖项" %></span>
					</li>
				<% end %>
			</em>
		</ul>
	</div>
	
	<div class="main">
		<h3><%= "其他:" %></h3>
		<ul><%= paragraphs(item.any_else, true, true) %></ul>
	</div>
	
	<div class="main">
		<h3><%= "相关链接:" %></h3>
		<ur/><%=  %></ul>
	</div>
</div>
