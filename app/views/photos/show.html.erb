<div class="content_block">
	
	<div class="block_header">
		<div class="block_header_link">
			<% if @photo.user == @current_user %>
				<%= link_to EDIT_CN, @edit_self_url %> |
			<% end %>
			<%= link_to "#{@parent_name}的更多#{@self_name} (#{@photos_set_count})", @selfs_url %> |
			<%= link_to "#{BACK_CN}#{@parent_name}", @parent_url %>
		</div>
		<h1><%= h @block_title %></h1>
	</div>
	
	<div class="block_main">
		<div class="prev_next">
			<%= " (#{@photo_index} / #{@photos_set_count})" %>
			&nbsp;
			<% if @photos_set_count > 1 %>
				<%= link_to "#{PREV_ONE_CN}#{@self_unit}", [@parent_obj, @prev_photo] %>
				&nbsp;
				<%= link_to "#{NEXT_ONE_CN}#{@self_unit}", [@parent_obj, @next_photo] %>
			<% else %>
				<%= "#{PREV_ONE_CN}#{@self_unit}" %>
				&nbsp;
				<%= "#{NEXT_ONE_CN}#{@self_unit}" %>
			<% end %>
		</div>
		
		<div class="sub_block">
			<%= render :partial => "/photos/photo",
								 :locals => {:photo => @photo,
								 						 :photo_link_url => [@parent_obj, @next_photo], 
								 						 :show_parent => true, 
								 						 :show_todo => true} %>
		</div>
		
	</div>
	
</div>
