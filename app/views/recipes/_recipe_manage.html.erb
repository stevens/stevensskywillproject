<% if @current_user && item.user == @current_user %>
	<% if @current_user.is_role_of?('admin') && ref == 'show' %>
		<% if item.roles && item.roles.include?('11') %>
			<%= link_to_remote "#{DELETE_CN}精选", :url => { :action => 'choice', :id => item.id, :to_choice => false, :ref => ref }, :confirm => "确定要#{DELETE_CN}这#{unit_for('Recipe')}精选#{RECIPE_CN}吗?" %> |
		<% else %>
			<%= link_to_remote '加为精选', :url => { :action => 'choice', :id => item.id, :to_choice => true, :ref => ref } %> |
		<% end %>
	<% end %>
	
	<% delete_message = "确定要#{DELETE_CN}这#{unit_for('Recipe')}#{RECIPE_CN}吗?" %>
	<% if ref == 'show' %>
		<% if item.is_draft == '1' && item.cover_photo_id && item.status.to_i >= 1 %>
			<%= link_to_remote "发布这#{unit_for('Recipe')}#{RECIPE_CN}", :url => { :action => 'publish', :id => item.id, :to_publish => true, :ref => ref } %> |
		<% elsif item.is_draft != '1' %>
			<%= link_to_remote "设置为草稿", :url => { :action => 'publish', :id => item.id, :to_publish => false, :ref => ref } %> |
		<% end %>
		<%= link_to "#{EDIT_CN}这#{unit_for('Recipe')}#{RECIPE_CN}", { :action => 'edit', :id => item.id, :ref => ref } %> |
		<%= link_to "#{DELETE_CN}这#{unit_for('Recipe')}#{RECIPE_CN}", { :action => 'destroy', :id => item.id, :ref => ref }, :confirm => delete_message, :method => :delete %>
	<% elsif ref == 'index' %>
		<% if item.is_draft == '1' && item.cover_photo_id && item.status.to_i >= 1 %>
			<%= link_to "发布", :action => 'publish', :id => item.id, :to_publish => true, :ref => ref, :filter => @current_filter %> |
		<% elsif item.is_draft != '1' %>
			<%= link_to "设置为草稿", :action => 'publish', :id => item.id, :to_publish => false, :ref => ref, :filter => @current_filter %> |
		<% end %>
		<%= link_to EDIT_CN, { :action => 'edit', :id => item.id, :ref => ref, :filter => @current_filter } %> | 
		<% if delete_remote %>
			<%= link_to_remote DELETE_CN, :url => { :action => 'destroy', :id => item.id, :ref => ref, :filter => @current_filter }, :confirm => delete_message, :method => :delete %>
		<% else %>
			<%= link_to DELETE_CN, { :action => 'destroy', :id => item.id, :ref => ref, :filter => @current_filter }, :confirm => delete_message, :method => :delete %>
		<% end %>
	<% end %>
<% elsif @current_user %>
	<% if @current_user.is_role_of?('admin') && ref == 'show' %>
		<% if item.roles && item.roles.include?('11') %>
			<%= link_to_remote "#{DELETE_CN}精选", :url => { :action => 'choice', :id => item.id, :to_choice => false, :ref => ref }, :confirm => "确定要#{DELETE_CN}这#{unit_for('Recipe')}精选#{RECIPE_CN}吗?" %>
		<% else %>
			<%= link_to_remote '加为精选', :url => { :action => 'choice', :id => item.id, :to_choice => true, :ref => ref } %>
		<% end %>
	<% end %>
<% end %>