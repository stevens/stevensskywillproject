<div class="sidebar_block">
	<div class="sidebar_block_header">
		<div class="sidebar_block_header_link">	
			<%= link_to "更多", user_recipes_path(@recipe.user) %>	
		</div>
		<h1><%= h "#{username_prefix(@recipe.user)}其他#{RECIPE_CN}" %></h1>
	</div>
	
	<div class="sidebar_block_main">
		<%= render :partial => "/layouts/items_matrix",
							 :locals => {:show_paginate => false,
							 						 :items_set => @other_recipes_set, 
							 						 :limit => 12,
							 						 :items_count_per_row => 4,  
							 						 :show_photo => true, 
							 						 :show_below_photo => false,  
							 						 :show_title => false, 
							 						 :show_photo_todo => false, 
							 						 :photo_style => 'sign'} %>
	</div>
</div>

