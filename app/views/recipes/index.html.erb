<div class="content_block">
	
	<div class="block_header">
		<% if @show_header_link %>
			<div class="block_header_link">	
					<% if @current_user %>
						<%= link_to "#{CREATE_CN}æ–°#{@self_name}", new_recipe_url %>	
					<% end %>
			</div>
		<% end %>
		<h1><%= h @block_title %></h1>
	</div>
	
	<%= render :partial => "layouts/items_paginate",
						 :locals => {:items => @recipes} %>

	<div class="block_main">
		<%= render :partial => "/layouts/items_list",
							 :locals => {:item_type => 'recipe', 
							 						 :items => @recipes,
							 						 :show_photo => true, 
							 						 :show_title => false, 
							 						 :show_photo_todo => true,
							 						 :show_parent => false,  
							 						 :show_todo => true} %>
	</div>
	
	<%= render :partial => "layouts/items_paginate",
						 :locals => {:items => @recipes} %>

</div>
