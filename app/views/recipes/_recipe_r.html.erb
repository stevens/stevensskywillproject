<div id="recipe_<%= item.id %>_basic" class="basic">
  <h2>
    <%= render :partial => 'layouts/item_basic',
               :locals => { :item => item,
                            :show_icon => true,
                            :show_title => true,
                            :show_link => true } %>
  </h2>
  <ul>
    <li>
      <%= render :partial => 'users/user_basic',
                 :locals => { :user => item.user,
                              :show_come_from => false,
                              :show_icon => true,
                              :show_name => true,
                              :show_link => true,
                              :show_username => true,
                              :show_myname => false } %>
    </li>
    <li>
      <% item_type = type_for(item).downcase %>

      <% stats_entries = [] %>
      <% stats_entries << [ [ 'rate', item_type, item.id ],
                            [ item.ratings.size, '', '', average_rating_value(item) ]
                          ] %>
      <% stats_entries << [ [ 'favorite', item_type, item.id ],
                            [ item.favorites.size, '', unit_for('favoritie_s') ]
                          ] %>
      <% stats_entries << [ [ 'review', item_type, item.id ],
                            [ item.reviews.size, '', unit_for('review_s') ]
                          ] %>

      <%= render :partial => 'layouts/stats_entries_s',
                 :locals => { :stats_entries => stats_entries } %>
    </li>
  </ul>
</div>