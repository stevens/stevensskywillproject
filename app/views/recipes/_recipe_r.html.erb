<div id="recipe_<%= item.id %>_basic" class="basic">
	<h2>
		<!-- <%= "[#{code_title('from_type', item.from_type)}] " %> -->
		<% if item.from_type == '1' %>
			<%= image_tag 'default/other/private.png', :title => '私房', :class => "icon" %>
		<% end %>
		<%= link_to h(item.title), item %>
	</h2>
	<ul>
		<li>
			<%= "来自 " %><%= link_to h(user_username(item.user)), user_first_link(item.user) %>
		</li>
		<li>
			<% if (ratings_count = item.ratings.size) > 0 %>
				<span class="rating"><%= "#{average_rating_value(item)} (#{ratings_count}票)" %></span> |
			<% else %>
				<%= "0票" %> |
			<% end %>
			<% if (favorites_count = item.favorites.size) > 0 %>
				<%= link_to "#{favorites_count}藏", item %> |
			<% else %>
				<%= "0藏" %> |
			<% end %>
			<% if (reviews_count = item.reviews.size) > 0 %>
				<%= link_to "#{reviews_count}评", item %>
			<% else %>
				<%= "0评" %>
			<% end %>
		</li>
	</ul>
</div>