<div class="content_block">
	
	<div class="block_header">
		<div class="block_header_link">
			<%= link_to SEE_CN, :action => 'show' %> |
			<%= link_to h("#{username_prefix(@recipe.user)}更多#{RECIPE_CN} (#{@recipes_set_count})"), :action => 'mine' %>
		</div>
		<h1><%= h @block_title %></h1>
	</div>
	
	<div class="block_main">
		<%= render :partial => "recipe_input", 
							 :locals => {:recipe => @recipe, 
							 						 :is_new => false, 
							 						 :from_type => (!@recipe.from_type ? '1' : @recipe.from_type)} %>
	</div>

</div>