<div class="content_block">
	
	<div class="block_header">
		<div class="block_header_link">	
			<% if @recipe.user == @current_user %>
				<%= link_to EDIT_CN, :action => 'edit' %> |
				<%= link_to "我的更多#{RECIPE_CN} (#{@recipes_set_count})", :controller => 'mine', :action => 'recipes' %>
			<% else %>
				<%= link_to h("#{user_username(@recipe.user)}的更多#{RECIPE_CN} (#{@recipes_set_count})"), user_recipes_path(@recipe.user) %>
			<% end %>
		</div>
		<h1><%= h @block_title %></h1>
	</div>

	<div class="block_main">

		<div id="recipe_rating" class="rating">
			<%= render :partial => "/ratings/rate",
								 :locals => {:ratings_count => @recipe.ratings.size,
								 						 :average_rating_value => average_rating_value(@recipe), 
								 						 :my_rating_value => user_rating_value(@current_user, @recipe), 
								 						 :rateable_type => 'recipe',
								 						 :rateable_id => @recipe.id} %>
		</div>
		
		<div class="sub_block">
				<%= render :partial => "recipe",
									 :locals => {:item => @recipe,
									 						 :photos => @photos, 
									 						 :show_todo => true} %>
		</div>
		    	
		<div id="reviews_for_recipe_<%= @recipe.id %>" class="sub_block">
			<%= render :partial => "/reviews/reviewable_reviews",
								 :locals => {:reviewable => @recipe} %>
		</div>
		
		<div class="sub_block_o">
			<%= render :partial => "/layouts/notice",
								 :locals => {:nid => "new_review",
								 						 :notice => nil} %>
			<% if @current_user %>
				<%= render :partial => "/reviews/input_review", 
									 :locals => {:reviewable => @recipe,
									 						 :review => @recipe.reviews.build, 
									 						 :is_new => true, 
									 						 :review_error => false, 
									 						 :review_text => ''} %>
			<% else %>
				<div class="todo_button">
					<%= link_to "我要#{ADD_CN}新#{REVIEW_CN}", new_recipe_review_path(@recipe) %>
				</div>
			<% end %>
		</div>
	</div>
	
</div>
