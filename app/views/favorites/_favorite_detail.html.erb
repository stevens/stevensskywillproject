<% if favorites_set %>
	<% items_set = [] %>
	<% for favorite in favorites_set[0..limit-1] %>
		<% if show_type == 'favorable' %>
			<% items_set << favorite.favorable %>
		<% elsif show_type == 'user' %>
			<% items_set << favorite.user %>
		<% end %>
	<% end %>
<% end %>

<%= render :partial => "/layouts/items_matrix",
					 :locals => {:show_paginate => false,
					 						 :items_set => items_set, 
					 						 :limit => nil,
					 						 :items_count_per_row => items_count_per_row,  
					 						 :show_photo => true, 
					 						 :show_below_photo => true,  
					 						 :show_title => show_title, 
					 						 :show_photo_todo => false, 
					 						 :photo_style => photo_style} %>