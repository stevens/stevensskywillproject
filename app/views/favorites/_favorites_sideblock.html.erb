<div id="<%= id %>_wrapper" class="sidebar_block">
	<div id="<%= id %>_header" class="sidebar_block_header">
		<div class="sidebar_block_header_link">
			<% if block_header_link %>
				<%= link_to strip_tags(block_header_link[:title]), block_header_link[:url] %>	
			<% end %>
		</div>
		<h1><%= strip_tags block_title %></h1>
	</div>
	
	<div id="<%= id %>_detail" class="sidebar_block_main">
		<%= render :partial => '/favorites/favorite_detail', 
							 :locals => { :favorites_set => favorites_set, 
							 							:limit => limit, 
							 							:show_type => show_type, 
							 							:photo_style => photo_style, 
							 							:show_title => false } %>
	</div>
</div>