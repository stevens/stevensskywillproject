<% form_for  [reviewable, review] do |f| %>
	<table class="content">
		<tr>
			<td></td>
			<td class="input">
				<div class="info">
					<%= "#{name_for(type_for(reviewable))}-" %><%= link_to h("#{item_title(reviewable)}"), restfu_url_for(nil, nil, {:type => type_for(reviewable), :id => reviewable.id}, nil) %><%= "çš„#{REVIEW_CN}" %>
				</div>
			</td>
		</tr>
		<tr>
			<td class="label">
				<label class="required" for="title"><%= "#{SUBJECT_CN}:" %></label>
			</td>
			<td class="input">
				<div class="input">
					<%= f.text_field :title, :class => "text" %>
				</div>
				<%= error_message_on "review", "title" %>
			</td>
		</tr>
		<tr>
			<td class="label">
				<label class="required" for="review"><%= "#{REVIEW_CN}:" %></label>
			</td>
			<td class="input">
				<div class="input">
					<%= f.text_area :review %>
				</div>
				<%= error_message_on "review", "review" %>
			</td>
		</tr>
		<tr>
			<td></td>
			<td class="input">
				<div class="submit">
					<%= f.submit button_name, :class => "submit" %>
					&nbsp;&nbsp;
					<%= link_to "&raquo;#{CANCLE_CN}", '' %>
				</div>
			</td>
		</tr>
	</table>
<% end %>
