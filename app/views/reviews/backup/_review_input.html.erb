<% form_for  [reviewable, review] do |f| %>
	<table class="content">
		<tr>
			<td class="label">
				<label class="required" for="review"><%= "#{REVIEW_CN}:" %></label>
			</td>
			<td class="input">
				<div class="input">
					<%= f.text_area :review %>
				</div>
				<%= error_message_on "review", "review" %>
			</td>
		</tr>
		<tr>
			<td></td>
			<td class="input">
				<div class="submit">
					<%= f.submit button_name, :class => "submit" %>
					&nbsp;&nbsp;
					<%= link_to "&raquo;#{CANCLE_CN}", '' %>
				</div>
			</td>
		</tr>
	</table>
<% end %>
