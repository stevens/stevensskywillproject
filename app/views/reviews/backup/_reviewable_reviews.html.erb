<div class="sub_block_header">
	<%= "#{name_for(type_for(reviewable))}#{REVIEW_CN} (#{reviewable.reviews.size})" %>
</div>

<% if show_paginate %>
	<% reviews = items_paginate(reviewable.reviews) %>
<% else %>
	<% reviews = reviewable.reviews %>
<% end %>

<% if show_paginate %>
	<%= render :partial => "/layouts/items_paginate",
						 :locals => {:items => reviews} %>
<% end %>
	
<% if reviewable.reviews.size > 0 %>
	<div>
		<%= render :partial => "/layouts/items_list",
							 :locals => {:item_type => 'review', 
							 						 :items => reviews,
							 						 :itemable_sym => 'reviewable',
							 						 :show_photo => true,  
							 						 :show_title => false, 
							 						 :show_photo_todo => false, 
							 						 :show_parent => false, 
							 						 :show_todo => true} %>
	</div>
<% end %>

<% if show_paginate %>
	<%= render :partial => "/layouts/items_paginate",
						 :locals => {:items => reviews} %>
<% end %>