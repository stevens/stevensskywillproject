<% if notice %>
	<div id="new_review_notice" class="notice">
		<%= notice %>
	</div>
<% end %>

<div id="edit_review_form_<%= review.id %>" class="sub_block">
	<% remote_form_for [reviewable, review] do |f| %>
		<div class="input">
			<% if review_error %>
				<div class="fieldWithErrors">
					<%= f.text_area :review, :class => 's', :value => review_text %>
				</div>
			<% else %>
				<%= f.text_area :review, :class => 's', :value => review_text %>
			<% end %>
		</div>
		<div class="error">
			<%= error_message_on "review", "review" %>
		</div>
		<div class="submit">
			<%= f.submit "#{ADD_CN}æ–°#{REVIEW_CN}", :class => "submit" %>
		</div>
	<% end %>
</div>