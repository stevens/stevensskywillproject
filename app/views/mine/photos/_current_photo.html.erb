<% if @photo_style == 'detail' %>
	<%= link_to image_tag(photo_url(@photo, @photo_type, @photo_style), :alt => h(photo_alt(@photo, sysinfo('300001', '', nil, HAS_NO_CN, {:type => PHOTO_CN})))),  
												@photo_path %>
<% elsif @photo_style == 'full' %>
	<%= link_to image_tag(@photo.public_filename, :alt => h(@photo.caption)), 
												photo_path_for(@photo_type, @belong_to, @next_photo, true) %>
<% elsif @photo_style == 'list' %>
	<%= link_to image_tag(photo_url(@photo, @photo_type, @photo_style), :alt => h(@photo.caption)), 
												@photo_path %>
<% end %>