<div class="content_block">
	<div class="block_header">
		<div class="block_header_link">
			<%= link_to sysinfo('300006', '', {:type => @belong_to_type}, MORE_CN, {:type => PHOTO_CN, :count =>@belong_to_photos_count}), @photos_path %> |
			<%= link_to sysinfo('300005', BACK_CN, nil, '', {:type => @belong_to_type, :title => @belong_to_title}), @belong_to_path %>	
		</div>
		<h1><%= @block_title %></h1>
	</div>

	<!-- <%= error_messages_for :photo %> -->
	<div class="block_main">
		<table class="content">
		  <tr>  	
		    <td class="image">
	    		<div class="list_image">
						<%= render :partial => "/mine/photos/current_photo" %>
	    		</div>
	    	</td>
	    	<td class="edit">
					<% form_for(:photo, :url => @photo_path, :html => { :method => :put }) do |f| %>
						<div class="label">
							<label class="left" for="caption"><%= "#{CAPTION_CN}:" %></label>
						</div>
						<div class="input">
							<%= f.text_area :caption %>
						</div>
						<div class="error">
							<%= error_message_on "photo", "caption" %>
						</div>
						<div class="input">
							<% if @photo.is_cover?(@belong_to) %>
								<%= sysinfo('300008', '', {:type => @belong_to_type}, COVER_CN, {:type => PHOTO_CN, :count => 1, :unit => UNIT_2_CN}) %>
							<% else %>
								<%= check_box_tag "is_cover" %><%= " #{sysinfo('300009', BECOME_CN, {:type => @belong_to_type}, COVER_CN, {:type => PHOTO_CN, :count => 1, :unit => UNIT_2_CN})}" %>
							<% end %>
						</div>
						<div class="submit">
							<%= f.submit SAVE_CHANGES_CN, :class => "submit" %>
							&nbsp;&nbsp;
							<%= link_to "&raquo;#{CANCLE_CN}", @photos_path %>
						</div>
					<% end %>
	    	</td>
	    </tr>	
		</table>	
	</div>
</div>
