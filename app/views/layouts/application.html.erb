<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
	<head>
		<title><%= h @page_title %></title>
		<%= stylesheet_link_tag "alpha/application.css" %>
		<%= stylesheet_link_tag "alpha/style.css" %>
		<%= javascript_include_tag :defaults %>
		<link href="" rel="shortcut icon"/>	
	</head>
	<body>
	
		<!-- MAIN NAVIGATION -->		
		<div id="navigation">
			<div id="left_navigation">
				<ul class="navigation">
					<li class=<%= tab_css_class(@current_tab_type, 'site') %>>
						<%= link_to HOME_CN, root_path %>
					</li>
					<li class=<%= tab_css_class(@current_tab_type, 'recipe') %>>
						<%= link_to RECIPE_CN, "#{recipes_url}/overview" %>
					</li>
					<li class=<%= tab_css_class(@current_tab_type, 'menu') %>>
						<%= link_to MENU_CN, root_path %>
					</li>
					<li class=<%= tab_css_class(@current_tab_type, 'friend') %>>
						<%= link_to FRIEND_CN, root_path %>
					</li>
					<li class=<%= tab_css_class(@current_tab_type, 'group') %>>
						<%= link_to GROUP_CN, root_path %>
					</li>
				</ul>
			</div>
		
			<div id="right_navigation">
				<ul class="navigation">
					<li class=<%= tab_css_class(@current_tab_type, 'mine') %>>
						<%= link_to "我的#{SITE_NAME_CN}", "#{root_url}mine" %>
					</li>
					<% if logged_in? %>
						<li class=<%= tab_css_class(@current_tab_type, 'profile') %>>
							<%= link_to PROFILE_CN, root_path %>
						</li>
						<li class=<%= tab_css_class(@current_tab_type, 'message') %>>
							<%= link_to MAILBOX_CN, root_path %>
						</li>
						<li class=<%= tab_css_class(@current_tab_type, 'setting') %>>
							<%= link_to SETTING_CN, root_path %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
		<!-- END MAIN NAVIGATION -->
		
		<div>
			<!-- HEADER -->			
			<div id="header">
				<!-- logo -->
				<div id="logo">
					<%= link_to image_tag('alpha/beecook.png', :alt => SITE_NAME_EN), root_path %>
				</div>
				
				<!-- help -->
				<div id="help">
					<%= link_to HELP_CN, root_path %>
				</div>
				
				<!-- current user -->
				<div id="current_user">
					<% if current_user = User.find_by_id(session[:user_id]) %> 
						<%= "#{HELLO_CN}, " %><%= link_to current_user.login, user_url(current_user) %>
						<%= link_to LOGOUT_CN, "#{root_path}logout" %>
					<% else %>
						<%= link_to SIGN_UP_CN, "#{root_path}signup" %>
						<%= link_to LOGIN_CN, "#{root_path}login" %>
					<% end %>	
				</div>
			</div>
			<!-- END HEADER -->
			
			<!-- CONTENT -->		
			<div id="content_wrapper">			
				<div id="content_main">
					<!-- sub navigation -->
					<div id="sub_navigation">
						<% if @current_tab_type == 'site' %>
							<%= "Welcome to #{SITE_NAME_EN}!" %>
						<% elsif @current_tab_type == 'mine' %>
							<%= link_to "我的#{REVIEW_CN}", root_path %>
							<%= link_to "我的#{PHOTO_CN}", root_path %>
							<%= link_to "我的#{TAG_CN}", root_path %>
						<% elsif @current_tab_type %>
							<% if @current_user %>
								<%= link_to "我的#{@current_tab_name}", :controller => @current_tab_type.pluralize, :action => 'mine' %>
							<% end %>
							<%= link_to "分类#{@current_tab_name}", root_path %>
							<%= link_to "#{@current_tab_name}#{RANKING_CN}", root_path %>
							<%= link_to "#{@current_tab_name}#{REVIEW_CN}", root_path %>
							<%= link_to "#{@current_tab_name}#{PHOTO_CN}", root_path %>
							<%= link_to "#{@current_tab_name}#{TAG_CN}", root_path %>
						<% else %>
							<%= "Welcome to #{SITE_NAME_EN}!" %>
						<% end %>
					</div>
					
					<!-- sidebar colmun  -->
				  <div id="sidebar_column">
				  	<% if !current_user && (params[:controller] != 'sessions') && (params[:controller] != 'users') %>
					  	<%= render :partial => "layouts/login_sidebar" %>
					  <% end %>
						<%= render :partial => "layouts/search_sidebar" %>
						
						<% if @show_sidebar %>
							<%= render :partial => "#{params[:controller]}/#{params[:action]}_sidebar" %>
						<% end %>
				  </div>
					
					<!-- content column -->
					<div id="content_column">

						<% if @system_notice %>
							<div id="system_notice"><%= @system_notice %></div>
						<% end %>
						
						<% if flash[:notice] %>
							<div id="flash"><%= flash[:notice] %></div>
						<% end %>
						
						<%= yield %>
						
					</div>
				</div>		
			</div>
			<!-- END CONTENT -->
			
			<!-- FOOTER -->			
			<div id="footer">
				<%= link_to "#{ABOUT_CN}#{SITE_NAME_CN}", root_path %> 
				<%= link_to CONTACT_US_CN, root_path %> 
				<%= link_to PRIVACY_POLICY_CN, root_path %> 
				<%= link_to TERMS_OF_SERVICE_CN, root_path %> 
				<%= link_to HELP_CN, root_path %> 
				<span class="copyright"><%= "#{SITE_NAME_EN} © #{YEAR_BEGIN}-#{YEAR_NOW} is a service of #{STUDIO_NAME_EN}" %></span>
			</div>
			<!-- END FOOTER -->
			
		</div>
	</body>
</html>