<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
	<head>	
		<title><%= h @page_title %></title>
		<%= stylesheet_link_tag "alpha/application.css" %>
		<%= javascript_include_tag :defaults %>
		<link rel="shortcut icon" href="http://www.beecook.com/favicon.ico" />
		
		<script type="text/javascript">
			var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
			document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
		</script>
		<script type="text/javascript">
			var pageTracker = _gat._getTracker("UA-2323873-2");
			pageTracker._trackPageview();
		</script>
		
	</head>
	
	<body>
		<div>
			<!-- HEADER -->			
			<div id="header_wrapper">
				<div id="header_content">
					<!-- help -->
					<!-- <div id="help">
						<%= link_to HELP_CN, root_url %>
					</div> -->
					
					<!-- current user -->
					<div id="current_user">
						<% if current_user = User.find_by_id(session[:user_id]) %> 
							<%= "#{HELLO_CN}, " %><%= link_to current_user.login, user_first_link(current_user) %>
							<%= link_to LOGOUT_CN, "#{root_url}logout" %>
						<% else %>
							<%= link_to LOGIN_CN, "#{root_url}login" %>
							<%= link_to SIGN_UP_CN, "#{root_url}signup" %>
						<% end %>	
					</div>
					
					<!-- logo -->
					<div id="logo">
						<%= link_to image_tag('alpha/beecook.png', :title => SLOGAN_CN), root_url %>
					</div>
				</div>
			</div>
			<!-- END HEADER -->	
			
			<!-- MAIN NAVIGATION -->		
			<div id="navigation">
				<div id="left_navigation">
					<ul class="navigation">
						<li class=<%= tab_css_class(@current_tab_type, 'site') %>>
							<%= link_to HOME_CN, root_url %>
						</li>
						<li class=<%= tab_css_class(@current_tab_type, 'recipe') %>>
							<%= link_to RECIPE_CN, "#{recipes_url}/overview" %>
						</li>
						<!-- <li class=<%= tab_css_class(@current_tab_type, 'menu') %>>
							<%= link_to MENU_CN, root_url %>
						</li>
						<li class=<%= tab_css_class(@current_tab_type, 'friend') %>>
							<%= link_to FRIEND_CN, root_url %>
						</li>
						<li class=<%= tab_css_class(@current_tab_type, 'group') %>>
							<%= link_to GROUP_CN, root_url %>
						</li> -->
					</ul>
				</div>
			
				<div id="right_navigation">
					<ul class="navigation">
						<li class=<%= tab_css_class(@current_tab_type, 'mine') %>>
							<%= link_to "我的#{SITE_NAME_CN}", :controller => 'mine', :action => 'overview' %>
						</li>
						<% if logged_in? %>
							<!-- <li class=<%= tab_css_class(@current_tab_type, 'profile') %>>
								<%= link_to PROFILE_CN, root_url %>
							</li>
							<li class=<%= tab_css_class(@current_tab_type, 'message') %>>
								<%= link_to MAILBOX_CN, root_url %>
							</li> -->
							<li class=<%= tab_css_class(@current_tab_type, 'setting') %>>
								<%= link_to SETTING_CN, :controller => 'settings', :action => 'account' %>
							</li>
						<% end %>
					</ul>
				</div>
			</div>
			<!-- END MAIN NAVIGATION -->
			
			<!-- CONTENT -->		
			<div id="content_wrapper">			
				<div id="content_main">
					<!-- sub navigation -->
					<div id="sub_navigation">
						<% if @current_tab_type == 'site' %>
							<%= SLOGAN_CN %>
						<% elsif @current_tab_type == 'mine' %>
							<%= link_to "我的#{RECIPE_CN}", :controller => 'recipes', :action => 'mine' %>
							<%= link_to "我的#{REVIEW_CN}", :controller => 'reviews', :action => 'mine' %>
							<%= link_to "我的#{TAG_CN}", :controller => 'taggings', :action => 'mine' %>
						<% elsif @current_tab_type == 'setting' %>
							<%= link_to "#{ACCOUNT_CN}#{SETTING_CN}", :controller => 'settings', :action => 'account' %>
						<% elsif @current_tab_type == 'recipe' %>
							<% if @current_user %>
								<%= link_to "我的#{RECIPE_CN}", :controller => 'recipes', :action => 'mine' %>
							<% end %>
							<%= link_to "#{RECIPE_CN}列表", :controller => 'recipes', :action => 'index' %>
							<%= link_to "#{RECIPE_CN}#{REVIEW_CN}", :controller => 'reviews', :action => 'index', :reviewable_type => 'recipe' %>
							<%= link_to "#{RECIPE_CN}#{TAG_CN}", :controller => 'taggings', :action => 'index', :taggable_type => 'recipe' %>
						<% else %>
							<%= SLOGAN_CN %>
						<% end %>
					</div>
					
					<!-- sidebar colmun  -->
				  <div id="sidebar_column">
				  	<%= render :partial => "/layouts/todo_sidebar" %>
						<% if !current_user && params[:controller] == 'site' %>
					  	<%= render :partial => "/sessions/login_sidebar" %>
					  <% end %>
						<%= render :partial => "/searches/search_sidebar" %>
						<% if @show_sidebar %>
							<%= render :partial => "/#{params[:controller]}/#{params[:action]}_sidebar" %>
						<% end %>
				  </div>
					
					<!-- content column -->
					<div id="content_column">

						<% if @system_notice %>
							<div id="system_notice"><%= @system_notice %></div>
						<% end %>
						
						<% if flash[:notice] %>
							<div id="flash"><%= flash[:notice] %></div>
						<% end %>
						
						<% if @user_bar %>
							<%= render :partial => "/users/user_bar",
												 :locals => {:user => @user_bar} %>
						<% end %>

						<%= yield %>
						
					</div>
				</div>		
			</div>
			<!-- END CONTENT -->
			
			<!-- FOOTER -->			
			<div id="footer_wrapper">
				<div id="footer_content">
					<%= link_to "#{ABOUT_CN}#{SITE_NAME_CN}", root_url %> 
					<%= mail_to SITE_EMAIL, CONTACT_US_CN %> 
					<%= link_to PRIVACY_POLICY_CN, root_url %> 
					<%= link_to TERMS_OF_SERVICE_CN, root_url %> 
					<%= link_to HELP_CN, root_url %> 
					<span class="copyright"><%= "#{SITE_NAME_EN} © #{YEAR_BEGIN}-#{YEAR_NOW} is a service of #{STUDIO_NAME_EN}" %></span>
				</div>
			</div>
			<!-- END FOOTER -->
			
		</div>
		
	</body>
</html>