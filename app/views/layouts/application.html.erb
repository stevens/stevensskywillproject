<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
	<head>
		<title><%= @page_title %></title>
		<%= stylesheet_link_tag "alpha/application.css" %>
		<%= stylesheet_link_tag "alpha/style.css" %>
		<%= javascript_include_tag :defaults %>
		<link href="" rel="shortcut icon"/>	
	</head>
	<body>
	
		<!-- MAIN NAVIGATION -->		
		<div id="navigation">
			<div id="left_navigation">
				<ul class="navigation">
					<li class=<%= tab_css_class('site') %>>
						<%= link_to HOME_CN, root_path %>
					</li>
					<li class=<%= tab_css_class('recipes') %>>
						<%= link_to RECIPE_CN, recipes_path %>
					</li>
					<li class=<%= tab_css_class('menus') %>>
						<%= link_to MENU_CN, root_path %>
					</li>
					<li class=<%= tab_css_class('cooks') %>>
						<%= link_to COOK_CN, root_path %>
					</li>
					<li class=<%= tab_css_class('groups') %>>
						<%= link_to GROUP_CN, root_path %>
					</li>
				</ul>
			</div>
		
			<div id="right_navigation">
				<ul class="navigation">
					<li class=<%= tab_css_class('mine') %>>
						<%= link_to "#{MY_CN}#{KITCHEN_CN}", "#{root_path}mine" %>
					</li>
					<% if logged_in? %>
						<li class=<%= tab_css_class('profiles') %>>
							<%= link_to PROFILE_CN, root_path %>
						</li>
						<li class=<%= tab_css_class('messages') %>>
							<%= link_to MAILBOX_CN, root_path %>
						</li>
						<li class=<%= tab_css_class('settings') %>>
							<%= link_to SETTING_CN, root_path %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
		<!-- END MAIN NAVIGATION -->
		
		<div>
			<!-- HEADER -->			
			<div id="header">
				<!-- logo -->
				<div id="logo">
					<%= link_to image_tag('logo.png', :alt => SITE_NAME_EN), root_path %>
				</div>
				
				<!-- help -->
				<div id="help">
					<%= link_to HELP_CN, root_path %>
				</div>
				
				<!-- current user -->
				<div id="current_user">
					<% if logged_in? %> 
						<%= "#{HELLO_CN}, " %><%= link_to @current_user.login, user_url(@current_user) %>
						<%= link_to LOGOUT_CN, "#{root_path}logout" %>
					<% else %>
						<%= link_to SIGN_UP_CN, "#{root_path}signup" %>
						<%= link_to LOGIN_CN, "#{root_path}login" %>
					<% end %>	
				</div>
			</div>
			<!-- END HEADER -->
			
			<!-- CONTENT -->		
			<div id="content_wrapper">			
				<div id="content_main">
					<!-- sub navigation -->
					<div id="sub_navigation">	
						<% if params[:controller] == 'mine' %>
							<%= link_to "#{MY_CN}#{RECIPE_CN}", mine_recipes_path %>
							<%= link_to "#{MY_CN}#{MENU_CN}", root_path %>
							<%= link_to "#{MY_CN}#{REVIEW_CN}", root_path %>
							<%= link_to "#{MY_CN}#{PHOTO_CN}", root_path %>
							<%= link_to "#{MY_CN}#{TAG_CN}", root_path %>
							<%= link_to "#{MY_CN}#{FRIEND_CN}", root_path %>
							<%= link_to "#{MY_CN}#{GROUP_CN}", root_path %>
						<% elsif params[:controller] != 'site' && params[:controller] != 'mine' %>
							<% if @current_user %>
								<%= link_to "我的#{name_for(params[:controller].singularize)}", :action => 'mine' %>
							<% end %>
							<%= link_to "分类#{name_for(params[:controller].singularize)}", root_path %>
							<%= link_to "#{name_for(params[:controller].singularize)}榜单", root_path %>
							<%= link_to "#{name_for(params[:controller].singularize)}评论", root_path %>
						<% else %>
							<%= "Welcome to #{SITE_NAME_EN}!" %>
						<% end %>
					</div>
					
					<!-- sidebar colmun  -->
				  <div id="sidebar_column">

				  </div>
				  <!-- <div id="sidebar_column">
						<div id="sidebar_panel">
							<%= render :partial => 'mine/sidebar/panel' %>
						</div>
						<div class="sidebar_block">
						</div>
					</div> -->
					
					<!-- content column -->
					<div id="content_column">
						<% if @system_notice %>
							<div class="system_notice"><%= @system_notice %></div>
						<% end %>
						
						<% if flash[:notice] %>
							<div id="flash"><%= flash[:notice] %></div>
						<% end %>
						
						<%= yield %>
						
					</div>
				</div>		
			</div>
			<!-- END CONTENT -->
			
			<!-- FOOTER -->			
			<div id="footer">
				<%= link_to "#{ABOUT_CN}#{SITE_NAME_CN}", root_path %> 
				<%= link_to CONTACT_US_CN, root_path %> 
				<%= link_to PRIVACY_POLICY_CN, root_path %> 
				<%= link_to TERMS_OF_SERVICE_CN, root_path %> 
				<%= link_to HELP_CN, root_path %> 
				<span class="copyright"><%= "#{SITE_NAME_EN} © #{YEAR_BEGIN}-#{YEAR_NOW} is a service of #{TEAM_NAME_EN}" %></span>
			</div>
			<!-- END FOOTER -->
			
		</div>
	</body>
</html>