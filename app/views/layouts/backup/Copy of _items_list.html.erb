<table class="content">
	
	<% for item in items %>
	  <tr>  	
	    
	    <td class="left_column">
	    	<div class="sub_block">
					<% if show_parent %>
						<% photoable_type = itemable_type(item, itemable_sym) %>
						<% photoable = itemable(item, itemable_sym) %>
					<% else %>
						<% photoable_type = item_type %>
						<% photoable = item %>
					<% end %>
					
					<% if show_photo %>
						<div class="list_photo">
		    			<%= render :partial => "/layouts/item_photo",
		    								 :locals => {:item_type => photoable_type, 
		    								 						 :item => photoable, 
		    								 						 :photo_style => 'list'} %>
						</div>
					<% end %>
					
					<div class="below_photo">
						<%= render :partial => "/layouts/item_below_photo", 
											 :locals => {:item_type => photoable_type, 
											 						 :item => photoable, 
											 						 :show_title => show_title, 
											 						 :show_photo_todo => show_photo_todo} %>
					</div>

				</div>
	    </td>
	    
	    <td class="right_column_lined">
	    	<div class="sub_block">
    			<%= render :partial => "/#{controller_name(item_type)}/#{item_type.downcase}_s", 
    								 :locals => {:item => item, 
    								 						 :show_parent => show_parent, 
    								 						 :show_todo => show_todo} %>
	    	</div>
	    </td>
	    
	  </tr>
	<% end %>
	
</table>