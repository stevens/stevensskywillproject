<% if @user || params[:action] == 'mine' %>
	
	<% if @user %>
		<% user = @user %>
	<% elsif params[:action] == 'mine' %>
		<% user = @current_user %>
	<% end %>
	
	<%= link_to "#{ALL_CN} ()", { :user_id => user.id, :controller => params[:controller], :action => 'index' }, :class => params[:filter] ? '' : 'current' %>
	<% for c in Code.find(:all, :conditions => { :codeable_type => "#{params[:controller].singularize}_filter" }, :order => 'code') %>
		| <%= link_to "#{c.title} ()", { :user_id => user.id, :controller => params[:controller], :action => 'index', :filter => c.name}, :class => c.code == params[:filter] ? 'current' : '' %>
	<% end %>
	
<% end %>