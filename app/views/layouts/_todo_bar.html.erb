<% 1.upto(buttons.size) do |i| %>
	<% button = buttons[i-1] %>
	
	<% if button[0][1] %>
		<% if button[0][2] %>
			<em class="<%= button[0][3] %>">
				<% if button[1][1] %>
					<%= link_to_remote button[1][0], :url => button[1][1], :confirm => button[1][2], :method => button[1][3] %>
				<% else %>
					<%= button[1][0] %>
				<% end %>
			</em>
		<% else %>
			<% if button[1][1] %>
				<%= link_to_remote button[1][0], :url => button[1][1], :confirm => button[1][2], :method => button[1][3] %>
			<% else %>
				<%= button[1][0] %>
			<% end %>
		<% end %>
	<% else %>
		<% if button[0][2] %>
			<em class="<%= button[0][3] %>">
				<% if button[1][1] %>
					<%= link_to button[1][0], button[1][1], :confirm => button[1][2], :method => button[1][3] %>
				<% else %>
					<%= button[1][0] %>
				<% end %>
			</em>
		<% else %>
			<% if button[1][1] %>
				<%= link_to button[1][0], button[1][1], :confirm => button[1][2], :method => button[1][3] %>
			<% else %>
				<%= button[1][0] %>
			<% end %>
		<% end %>
	<% end %>
	
	<% if i < buttons.size %>
		|
	<% end %>
<% end %>