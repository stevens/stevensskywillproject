<% item_type = type_for(item) %>

<% if item_type == 'User' %>
	<%= link_to image_tag(photo_file_url(user_portrait(item), 'user', photo_style), :title => strip_tags(str_squish(user_username(item)))), 
							user_first_link(item) %>
<% elsif item_type == 'Contact' %>
	<%= link_to image_tag(photo_file_url(user_portrait(item.contactor), 'user', photo_style), :title => strip_tags(str_squish(user_username(item.contactor)))), 
							user_first_link(item.contactor) %>
<% elsif item_type == 'Review' %>
	<%= link_to image_tag(photo_file_url(user_portrait(item.user), 'user', photo_style), :title => strip_tags(str_squish(user_username(item.user)))), 
							user_first_link(item.user) %>
<% else %>
	<%= link_to image_tag(photo_file_url(cover_photo(item), item_type, photo_style), :title => strip_tags(str_squish(item_title(item)))), 
							item %>
<% end %>