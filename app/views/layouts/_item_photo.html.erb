<% item_type = type_for(item) %>

<% if ['User', 'Contact', 'Review'].include?(item_type) %>
	<% if item_type == 'User' %>
		<% user = item %>
	<% elsif item_type == 'Contact' %>
		<% user = item.contactor %>
	<% elsif item_type == 'Review' %>
		<% user = item.user %>
	<% end %>
	<% photo = user_portrait(user) %>
	<% photoable_type = 'User' %>
	<% title = user_username(user) %>
	<% url = user_first_link(user) %>
<% else %>
	<% photo = cover_photo(item) %>
	<% photoable_type = item_type %>
	<% title = item_title(item) %>
	<% url = item %>
<% end %>

<% photo_demension = photo_dimension(photo, photo_size(photo_style)) %>
<%= link_to image_tag(photo_file_url(photo, photoable_type, photo_style), :title => strip_tags(str_squish(title)), :style => "width: #{photo_demension[0]}px; height: #{photo_demension[1]}px"), 
						url %>


