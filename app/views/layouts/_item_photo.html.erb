<% if item_type == 'review' %>
	<%= link_to image_tag(default_photo_file_url('cook', 'sign')), '' %>
<% else %>
	<% photo = item.cover_photo_id ? Photo.find(item.cover_photo_id) : nil %>
	<%= link_to image_tag(photo_file_url(photo, item_type, photo_style), :title => h(item_title(item_type, item))), 
							item_url(item_type, item.id) %>
<% end %>