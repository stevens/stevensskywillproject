<div class="welcome_wrapper">	
  <div class="welcome_content">
    <div id="welcome_random_items" class="block_main">
      <%= render :partial => 'layouts/items_matrix',
                  :locals => { :show_paginate => false,
                              :items_set => @recipes_set,
                              :limit => 3,
                              :items_count_per_row => 3,
                              :show_photo => true,
                              :show_below_photo => false,
                              :show_title => false,
                              :show_user => false,
                              :show_photo_todo => false,
                              :photo_style => 'highlight' } %>
    </div>
    <div id="welcome_site_brief">
      <div class="slogan">向着美味勇敢前进...</div>
      <table>
        <% common_link_url = url_for(:controller => 'recipes', :action => 'overview') %>
        <% subjects = [ [ 'mslg', '记录美食灵感', common_link_url ], [ 'sfsp', '分享私房食谱', common_link_url ], ['txcy', '结交天下厨友', common_link_url ], [ 'jhcd', '切磋江湖厨道', common_link_url ] ] %>
        <tr>
          <% for subject in subjects %>
            <td class="site_brief_photo">
              <%= link_to image_tag("site/#{subject[0]}.png", :title => subject[1], :alt => ''), subject[2] %>
            </td>
          <% end %>
        </tr>
        <tr>
          <% for subject in subjects %>
            <td class="site_brief_title">
              <%= subject[1] %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
    <div id="welcome_quicklink">
      <% if @current_user %>
        <%= link_to "我的#{MAIN_PAGE_CN}", user_first_link(@current_user) %>
        &nbsp;&nbsp;
        <%= link_to "#{CREATE_CN}#{RECIPE_CN}", new_recipe_path %>
      <% else %>
        <%= link_to "加入#{SITE_NAME_CN}", signup_url %>
        &nbsp;&nbsp;
        <%= link_to "随便逛逛", url_for(:controller => 'recipes', :action => 'overview') %>
      <% end %>
    </div>
  </div>
</div>