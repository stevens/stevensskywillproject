<% form_for :user, :url => {:action => 'update', :id => params[:id]} do |f| %>
	<div class="sub_block_tb">
	<table class="content">
		<tr>
			<td class="label">
				<label for="password"><%= "新#{PASSWORD_CN}:" %></label>
			</td>
			<td class="input">
				<div class="text">
					<%= "#{PASSWORD_CN}只能包含英文字母(区分大小写), 数字(0-9)和半角符号(._%+-)" %>
				</div>
				<div class="input">
					<%= f.password_field :password, :class => "text_s" %>
				</div>
				<%= error_message_on "user", "password" %>
			</td>
		</tr>
		<tr>
			<td class="label">
				<label for="password_confirmation"><%= "#{PASSWORD_CN}确认:" %></label>
			</td>
			<td class="input">
				<div class="text">
					<%= "请再次#{INPUT_CN}相同的#{PASSWORD_CN}进行确认" %>
				</div>
				<div class="input">
					<%= f.password_field :password_confirmation, :class => "text_s" %>
				</div>
				<%= error_message_on "user", "password_confirmation" %>
			</td>
		</tr>
		<tr>
			<td></td>
			<td class="submit">
				<div class="submit">
					<%= f.submit "#{RESET_CN}#{PASSWORD_CN}", :class => "submit" %>
					&nbsp;&nbsp;
					<%= link_to "&raquo;#{CANCLE_CN}", login_url %>
				</div>
			</td>
		</tr>
	</table>
	</div>
<% end %>