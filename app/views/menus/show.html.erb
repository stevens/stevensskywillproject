<div id="menu_<%= @menu.id %>_wrapper" class="content_block">
  <div id="menu_<%= @menu.id %>_header" class="block_header">
    <div class="block_header_link">
      <% if @menu.user == @current_user %>
        <%= link_to EDIT_CN, :action => 'edit' %>
      <% end %>
    </div>
    <h1><%= strip_tags @block_title %></h1>
  </div>

  <div id="menu_<%= @menu.id %>_detail" class="block_main">
    <div id="menu_prev_next_bar" class="prev_next_bar">
      <%= render :partial => 'layouts/prev_next',
                 :locals => { :items_set => @menus_set,
                              :current_index => @menu_index } %>
    </div>

    <div id="menu_<%= @menu.id %>_stats" class="item_stats">
      <%= render :partial => 'menus/menu_stats',
                 :locals => { :item => @menu } %>
    </div>

    <div id="menu_<%= @menu.id %>_self" class="sub_block">
      <%= render :partial => 'menus/menu',
                 :locals => { :item => @menu,
                              :photos_set => @photos_set,
                              :show_todo => true,
                              :show_favorite => false,
                              :show_manage => true } %>
    </div>
  </div>
</div>

<div id="menu_courses_wrapper" class="content_block">
  <div id="menu_courses_header" class="block_header">
    <div class="block_header_link">
      <%= link_to "#{MORE_CN}#{MENU_CN}#{COURSE_CN}", menu_courses_path(@menu) %>
    </div>
    <h1><%= "#{MENU_CN}#{COURSE_CN}" %></h1>
  </div>

  <div id="menu_courses_detail" class="block_main">
    <%= render :partial => "layouts/items_matrix",
               :locals => { :show_paginate => false,
                           :items_set => @menu.courses,
                           :limit => 18,
                           :items_count_per_row => 6,
                           :show_photo => true,
                           :show_below_photo => true,
                           :show_title => true,
                           :show_user => false,
                           :show_photo_todo => false,
                           :photo_style => 'matrix' } %>
  </div>
</div>

<%= render :partial => 'reviews/reviewable_reviews',
            :locals => { :reviewable => @menu } %>
