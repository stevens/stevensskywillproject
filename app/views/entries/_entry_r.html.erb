<% entriable = item.entriable %>

<div id="entry_<%= item.id %>_basic" class="basic">
	<h2>
		<%= render :partial => 'layouts/item_basic', 
							 :locals => { :item => entriable,
							 							:show_icon => true,
							 							:show_title => true,
							 							:show_link => true } %>
	</h2>
	<ul>
		<li>
			<%= render :partial => 'users/user_basic', 
								 :locals => { :user => entriable.user, 
								 							:show_come_from => false, 
								 							:show_icon => true,
								 							:show_name => true, 
								 							:show_link => true, 
								 							:show_username => true,
								 							:show_myname => false } %>
		</li>
		<li>
			<span style="color: #78b36d;">
              <% if @match_status == 'doing' %>
                <% total_votes = total_votes(item) %>
                <% votes_count = item.votes_count %>
              <% elsif @match_status == 'done' %>
                <% total_votes = item.valid_total_votes %>
                <% votes_count = item.valid_votes_count %>
              <% end %>
              <%= "#{total_votes}票 (#{votes_count}人投票)" %>
            </span>
		</li>
	</ul>
</div>