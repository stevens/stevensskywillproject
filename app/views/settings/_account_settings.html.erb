<div class="sub_block_tb">
<table class="content">
  <tr>
    <td class="label"><label><%= "#{NICKNAME_CN}:" %></label></td>
    <td class="input">
      <div class="info">
        <%= strip_tags account.login %>
        &nbsp;&nbsp;
        <%= link_to "#{CHANGE_CN}#{NICKNAME_CN}", :controller => 'accounts', :action => 'edit', :id => 'nickname' %>
      </div>
      <br />
    </td>
  </tr>

  <tr>
    <td class="label"><label><%= "#{PORTRAIT_CN}:" %></label></td>
    <td class="input">
      <div class="info">
        <span class="normal_photo">
          <%= render :partial => 'layouts/item_photo',
                      :locals => { :item_type => 'user',
                                  :item => @current_user,
                                  :photo_style => 'matrix' } %>
        </span>
        &nbsp;&nbsp;
        <% if current_portrait %>
          <%= link_to "#{CHANGE_CN}#{PORTRAIT_CN}", {:controller => 'accounts', :action => 'edit', :id => 'portrait'} %> |
          <%= link_to "#{DELETE_CN}#{PORTRAIT_CN}", {:controller => 'accounts', :action => 'delete', :id => 'portrait'}, :confirm => "确定要#{DELETE_CN}这个#{PORTRAIT_CN}吗?" %>
        <% else %>
          <%= link_to "#{UPLOAD_CN}#{PORTRAIT_CN}", {:controller => 'accounts', :action => 'edit', :id => 'portrait'} %>
        <% end %>
      </div>
      <br />
    </td>
  </tr>

  <tr>
    <td class="label"><label><%= "#{PASSWORD_CN}:" %></label></td>
    <td class="input">
      <div class="info">
        <%= '**********' %>
        &nbsp;&nbsp;
        <%= link_to "#{CHANGE_CN}#{PASSWORD_CN}", :controller => 'accounts', :action => 'edit', :id => 'password' %>
      </div>
      <br />
    </td>
  </tr>

  <% form_for profile do |f| %>
    <tr>
      <td class="label">
        <label for="blog"><%= "blog:" %></label>
      </td>
      <td class="input">
        <div class="text">
          <%= "请输入你的blog地址" %>
        </div>
        <div class="input">
          <%= f.text_field :blog, :class => "text" %>
        </div>
        <%= error_message_on "profile", "blog" %>
      </td>
    </tr>
    <tr>
      <td class="label">
        <label for="taobao"><%= "外部帐户名:" %></label>
      </td>
      <td class="input">
        <div class="text">
          <%= "请输入你的淘宝帐户名" %>
        </div>
        <div class="input">
          <%= f.text_field :taobao, :class => "text" %>
        </div>
        <%= error_message_on "profile", "taobao" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td class="input">
        <div class="submit">
          <%= f.submit SAVE_CN, :disable_with => "#{SAVE_CN}中...", :class => "submit" %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
</div>