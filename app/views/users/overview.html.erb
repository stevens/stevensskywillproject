<% if @highlighted_user %>
	<div class="content_block">
		<div class="block_header">
			<h1><%= strip_tags "#{PEOPLE_CN}之星 - #{item_title(@highlighted_user)}" %></h1>
		</div>
		<div class="block_main">
			<div class="full_photo">

			</div>
		</div>
	</div>
<% end %>

<div id="users_wrapper" class="content_block">
	<div id="users_header" class="block_header">
		<div class="block_header_link">	
			<%= link_to "#{MORE_CN}#{BRAIN_CN}", :action => 'index', :category => 'brain' %>	
		</div>
		<h1><%= "#{SITE_NAME_CN}#{BRAIN_CN}团" %></h1>
	</div>
	
	<div id="users_detail" class="block_main">
		<%= render :partial => "/layouts/items_list",
							 :locals => {:show_paginate => true,
							 						 :items_set => @brains_set, 
							 						 :limit => nil,
							 						 :itemable_sym => nil, 
							 						 :show_photo => true,
							 						 :photo_style => 'list',  
							 						 :show_below_photo => false, 
							 						 :show_title => false, 
							 						 :show_user => false, 
							 						 :show_photo_todo => false, 
							 						 :show_parent => false,
							 						 :show_todo => false, 
							 						 :show_favorite => false, 
							 						 :show_manage => false, 
							 						 :delete_remote => false} %>
	</div>
</div>

<div id="users_wrapper" class="content_block">
	<div id="users_header" class="block_header">
		<div class="block_header_link">	
			<%= link_to "#{MORE_CN}#{PEOPLE_CN}", users_path %>	
		</div>
		<h1><%= "#{PEOPLE_CN}新面孔" %></h1>
	</div>
	
	<div id="users_detail" class="block_main">
		<%= render :partial => "/layouts/items_matrix",
							 :locals => {:show_paginate => false,
							 						 :items_set => @users_set, 
							 						 :limit => 18,
							 						 :items_count_per_row => 6,  
							 						 :show_photo => true, 
							 						 :show_below_photo => true,  
							 						 :show_title => true, 
							 						 :show_user => false, 
							 						 :show_photo_todo => false, 
							 						 :photo_style => 'matrix'} %>
	</div>
</div>

